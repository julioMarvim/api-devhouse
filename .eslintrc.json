{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "func-names": "off",
    "prettier/prettier": ["error", { "singleQuote": true }],
    "class-methods-use-this": "off",
    "no-param-reassign": "off",
    "camelcase": "off",
    "no-underscore-dangle": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "next"}],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always",
        "mjs": "never",
        "jsx": "always"
      }
    ]
  }
}